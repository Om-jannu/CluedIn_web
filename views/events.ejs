                                                                                <input type="url" class="form-control"
                                                                                    id="notifRegistrationUrl"
                                                                                    placeholder="registration url"
                                                                                    name="notif_reg_url" required>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                   

                                                                </div>
